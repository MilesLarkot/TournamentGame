<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.pidev3a32.controllers.FrontGameDetailsController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="51.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#goToFrontOfficeGameList" text="Go Back" />
                  <Button mnemonicParsing="false" onAction="#goToFrontOfficeTournamentList" text="View Tournament" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
            <Text fx:id="txtTitle" strokeType="OUTSIDE" strokeWidth="0.0" text="Team1 vs Team2" />
            <Text fx:id="txtDate" strokeType="OUTSIDE" strokeWidth="0.0" text="Played on August 20, 2025" />
            <Text fx:id="txtTournament" strokeType="OUTSIDE" strokeWidth="0.0" text="Tournament: Summer Cup 2025" />
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label fx:id="lblTeam1" text="Team1" />
                  <Text fx:id="txtScore" strokeType="OUTSIDE" strokeWidth="0.0" text="0 - 0" />
                  <Label fx:id="lblTeam2" text="Team2" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
