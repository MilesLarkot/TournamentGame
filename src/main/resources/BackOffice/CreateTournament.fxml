<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.pidev3a32.controllers.CreateTournamentController">
   <children>
      <HBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox prefHeight="400.0" prefWidth="300.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="142.0" text="Tournament Name" />
                        <TextField fx:id="tfName" prefHeight="25.0" prefWidth="123.0" promptText="Tournament Name" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                     <children>
                        <Label text="Start Date" />
                        <DatePicker fx:id="dpStart" style="ss: ;" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                     <children>
                        <Label text="End Date" />
                        <DatePicker fx:id="dpEnd" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                     <children>
                        <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#createTournament" style="-fx-background-color: #ffce00;" text="Create">
                           <effect>
                              <Reflection />
                           </effect></Button>
                        <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#goToTournamentList" style="-fx-background-color: #ffce00;" text="Cancel">
                           <effect>
                              <Reflection />
                           </effect></Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="300.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Button fx:id="btnGenerateTeamName" mnemonicParsing="false" onAction="#generateTeamName" style="-fx-background-color: #ffce00;">
                           <graphic>
                              <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../pics/refresh-ccw.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <TextField fx:id="tfTeamName" promptText="Team name" />
                        <Button fx:id="btnAddTeam" mnemonicParsing="false" onAction="#addTeam" style="-fx-background-color: #ffce00;" text="Add Team" />
                     </children>
                  </HBox>
                  <ListView fx:id="lvTeams" prefHeight="334.0" prefWidth="280.0" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
